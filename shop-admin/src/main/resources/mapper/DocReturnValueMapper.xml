<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lza.shopadmin.dao.DocReturnValueDao">
    <resultMap id="BaseResultMap" type="com.lza.shopadmin.entity.DocReturnValueEntity" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="docid" property="docid" jdbcType="INTEGER" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="type" property="type" jdbcType="VARCHAR" />
        <result column="code" property="code" jdbcType="VARCHAR" />
        <result column="isrequired" property="isrequired" jdbcType="INTEGER" />
        <result column="default_value" property="defaultValue" jdbcType="VARCHAR" />
        <result column="description" property="description" jdbcType="VARCHAR" />
        <result column="status" property="status" jdbcType="INTEGER" />
        <result column="createdby" property="createdby" jdbcType="VARCHAR" />
        <result column="updatecount" property="updatecount" jdbcType="INTEGER" />
        <result column="updateby" property="updateby" jdbcType="VARCHAR" />
        <result column="create_time" property="createTime" jdbcType="BIGINT" />
		<result column="update_time" property="updateTime" jdbcType="BIGINT" />
    </resultMap>

    <sql id="Base_Column_List" >
        id, docid, name, type, code, isrequired, default_value, description
    </sql>
    
    <sql id="whereStatement">
		<where>
			1 = 1
			and a.docid = #{condition.docid}
			<if test="condition.name != null">
	          	and a.name like CONCAT(#{condition.name, jdbcType=VARCHAR},'%') 
	        </if>
		</where>
	</sql>
	
	 <sql id="whereStatement2">
		<where>
			1 = 1
			and a.docid = #{condition.docid}
			<if test="condition.name != null">
	          	and a.name like CONCAT(#{condition.name, jdbcType=VARCHAR},'%') 
	        </if>
		</where>
	</sql>
    
    <!--查询条数-->
    <select id="getReturnValueTotal" parameterType="com.lza.shopadmin.entity.DocReturnValueEntity" resultType="int">
        SELECT count(1) FROM shop_doc_returnvalue a 
        <include refid="whereStatement2" />
    </select>

    <!--查询分页列表-->
    <select id="getReturnValueList" parameterType="com.lza.shopadmin.utils.Pager" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM shop_doc_returnvalue a 
        <include refid="whereStatement" />
        order by a.id desc
    </select>
    
	<!--根据id获取数据-->
    <select id="getReturnValueById" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select
        <include refid="Base_Column_List" />
        from shop_doc_returnvalue where id = #{id}
    </select>
    
    <!--根据docid获取数据-->
    <select id="getReturnValueByDocId" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select
        <include refid="Base_Column_List" />
        from shop_doc_returnvalue where docid = #{docid}
    </select>
    
    <!--保存数据-->
    <insert id="save" parameterType="com.lza.shopadmin.entity.DocReturnValueEntity" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO shop_doc_returnvalue(docid, name, type, code, isrequired, default_value, description, create_time, createdby)
        VALUES(#{docid},#{name},#{type},#{code},#{isrequired},#{defaultValue},#{description},#{createTime},#{createdby});
    </insert>
    
    <!--更新数据-->
    <update id="update" parameterType="com.lza.shopadmin.entity.DocReturnValueEntity">
        update shop_doc_returnvalue
        set 
        name = #{name,jdbcType=VARCHAR},
        isrequired = #{isrequired,jdbcType=VARCHAR},
        type = #{type,jdbcType=VARCHAR},
        code = #{code,jdbcType=VARCHAR},
        default_value = #{defaultValue,jdbcType=VARCHAR},
        description = #{description,jdbcType=VARCHAR},
        update_time = #{updateTime,jdbcType=BIGINT},
        updateby = #{updateby,jdbcType=VARCHAR}
        where id=#{id,jdbcType=INTEGER}
    </update>

	<!--删除数据-->
    <delete id="delete" parameterType="java.lang.Integer">
        delete from shop_doc_returnvalue where id=#{id}
    </delete>
    
    <!--查询分页列表-->
    <select id="getReturnValueListByDocId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM shop_doc_returnvalue a where a.docid = #{docId}
        order by a.id desc 
    </select>

</mapper>